@model Entity.Concrete.Blog

@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/_WriterProfilePage.cshtml";
}

<div class="container">
    
    <form  method="post" action="/Blog/EditBlog">

         <div class="row mb-3">
            <label for="blogId" class="col-sm-2 col-form-label">Blog Başlığı</label>
            <div class="col-sm-10"> 
                @Html.TextBoxFor(x =>x.BlogId, new { @class = "form-control" })
                
            </div>
            
        </div>



        <div class="row mb-3">
            <label for="blogTitle" class="col-sm-2 col-form-label">Blog Başlığı</label>
            <div class="col-sm-10"> 
                @Html.TextBoxFor(x =>x.BlogTitle, new { @class = "form-control" })
                
            </div>
            
        </div>

        <div class="row mb-3">
            <label for="blogContent" class="col-sm-2 col-form-label">Blog İçeriği</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x =>x.BlogContent,10,3, new { @class = "form-control" })
                
            </div>
            
        </div>


        <div class="row mb-3">
            <label for="blogPhoto" class="col-sm-2 col-form-label">Fotoğraf</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x =>x.BlogImage, new { @class = "form-control" })
               
            </div>
        </div>

        <div class="row mb-3">
            <label for="blogPhoto" class="col-sm-2 col-form-label">Thumbnail Fotoğrafı</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x =>x.BlogThumbnailImage, new { @class = "form-control" })
               
            </div>
        </div>



        <div class="row mb-3">
            <label for="blogCategory" class="col-sm-2 col-form-label">Kategori</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(x =>x.CategoryId,(List<SelectListItem>)ViewBag.categoryList, new { @class = "form-control" })
              
            </div>
        </div>
        
        

        

        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Düzenle</label>
            <div class="col-sm-10">
                <button  class="btn btn-success">Kaydet</button>
                <a type="submit" class="btn btn-secondary" href="/Blog/GetBlogWriterId">Vazgeç</a>
            </div>
        </div>
    </form>
</div>
