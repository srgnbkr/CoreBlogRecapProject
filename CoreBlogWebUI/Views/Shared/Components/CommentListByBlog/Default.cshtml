@model IEnumerable<Entity.Concrete.Comment>

<div class="comment-top">

    @if (Model.Count() == 0)
    {
        <h4>Bloğa ait yorum bulunmamaktadır. İlk yorumu sen yap...</h4>
    }
    else
    {
        @foreach (var item in Model)
        {
            <h4>Yorumlar</h4>



            <div class="media">
                <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">
                        @item.CommentUserName
                    </h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>


        }}

</div>