<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
</head>


<div class="comment-top">
    <h4>Bir yorum yapın</h4>
    <div class="comment-bottom">
        <form id="commentForm">
            <input class="form-control" type="text" name="CommentUserName" placeholder="İsim" required="">
            

            <textarea class="form-control" name="CommentContent" placeholder="Yorum..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit" id="btnAddComment">Yorum Yap</button>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#btnAddComment").click(function () {
            var dataComment = $("#commentForm").serialize();

            $.ajax({
                type: "post",
                url: "/Comment/PartialAddComment/",
                data: dataComment
            });
        });
    });
   
</script>